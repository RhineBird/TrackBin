{
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--read-only",
        "--project-ref=YOUR_PROJECT_REF_HERE"
      ],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "YOUR_SUPABASE_ACCESS_TOKEN_HERE"
      }
    }
  }
}

// Instructions:
// 1. Copy this file to claude-mcp-config.json
// 2. Replace YOUR_PROJECT_REF_HERE with your Supabase project reference ID
// 3. Replace YOUR_SUPABASE_ACCESS_TOKEN_HERE with your Supabase access token
// 4. Get your access token from: https://supabase.com/dashboard/account/tokens
// 5. Get your project ref from your Supabase project dashboard URL